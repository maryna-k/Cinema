<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="centerCrop" />

            <!--Rating layout-->

            <LinearLayout
                android:id="@+id/rating_layout"
                style="@style/details_margins"
                android:layout_below="@id/header"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_rating" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/detail_text_size"
                    tools:text="10/10" />
            </LinearLayout>

            <ImageView
                android:id="@+id/small_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/rating_layout"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="-32dp"
                android:layout_marginLeft="@dimen/details_activity_margin_left"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            style="@style/title"
            tools:text="This is a title" />

        <!--Genre layout-->

        <RelativeLayout
            android:id="@+id/layout_genre"
            style="@style/details_margins">

            <ImageView
                android:id="@+id/ic_genre"
                style="@style/details_icon"
                android:src="@drawable/ic_genre" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/ic_genre"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/genre" />

                <TextView
                    android:id="@+id/genre"
                    style="@style/details_text"
                    tools:text="Some genre" />
            </LinearLayout>
        </RelativeLayout>

        <View style="@style/Divider" />

        <!--Release layout-->

        <RelativeLayout
            android:id="@+id/layout_release"
            style="@style/details_margins">

            <ImageView
                android:id="@+id/ic_release"
                style="@style/details_icon"
                android:src="@drawable/ic_release_date" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/ic_release"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_release_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release_date" />

                <TextView
                    android:id="@+id/release_date"
                    style="@style/details_text"
                    tools:text="01/01/01" />
            </LinearLayout>
        </RelativeLayout>

        <View style="@style/Divider" />

        <!--Layout overview-->
        <!--Layout header-->
        <LinearLayout
            android:id="@+id/layout_overview_title"
            style="@style/details_margins"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_overview"
                style="@style/details_icon"
                android:src="@drawable/ic_overview" />

            <TextView
                android:id="@+id/title_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/overview" />
        </LinearLayout>
        <!--Overview text-->
        <TextView
            android:id="@+id/overview"
            style="@style/details_margins"
            android:textSize="@dimen/detail_text_size"
            tools:text="Some example text" />

        <View style="@style/Divider" />

        <!--Trailer layout-->
        <!--Layout header-->
        <LinearLayout
            android:id="@+id/layout_trailers_title"
            style="@style/details_margins"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_trailers"
                style="@style/details_icon"
                android:src="@drawable/ic_trailers" />

            <TextView
                android:id="@+id/title_trailers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/trailers" />
        </LinearLayout>
        <!-- RecyclerView to display trailers -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/trailers_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CircularProgress" />

        <View style="@style/Divider" />

        <!--Reviews layout-->

        <LinearLayout
            android:id="@+id/layout_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--Layout header-->
            <LinearLayout
                android:id="@+id/layout_reviews_title"
                style="@style/details_margins"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_reviews"
                    style="@style/details_icon"
                    android:src="@drawable/ic_reviews" />

                <TextView
                    android:id="@+id/title_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/reviews" />
            </LinearLayout>
            <!--Layout body: contains actual reviews and author names-->
            <LinearLayout
                android:id="@+id/layout_reviews_text"
                style="@style/details_margins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_review" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/reviewer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="reviewer name" />

                    <TextView
                        android:id="@+id/review_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/details_text"
                        android:layout_marginBottom="5dp"
                        tools:text="Some Review" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/expand_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_expand_review"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/hide_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_hide_review"
                android:layout_marginBottom="10dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/review_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/review_button"
                android:layout_gravity="center"/>

        </LinearLayout>

        <!-- Reviews layout end -->

    </LinearLayout>
</ScrollView>