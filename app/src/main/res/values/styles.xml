<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="details_margins">
        <item name="android:layout_marginLeft">@dimen/details_activity_margin_left</item>
        <item name="android:layout_marginRight">@dimen/details_activity_margin_right</item>
        <item name="android:layout_marginTop">@dimen/details_activity_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/details_activity_margin_bottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="details_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/details_activity_margin_left</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/details_activity_margin_left</item>
        <item name="android:paddingTop">@dimen/movie_title_padding</item>
        <item name="android:paddingBottom">@dimen/movie_title_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/movie_title_size</item>
    </style>

    <style name="details_text">
        <item name="android:textSize">@dimen/detail_text_size</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/details_activity_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/details_activity_margin_bottom</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
